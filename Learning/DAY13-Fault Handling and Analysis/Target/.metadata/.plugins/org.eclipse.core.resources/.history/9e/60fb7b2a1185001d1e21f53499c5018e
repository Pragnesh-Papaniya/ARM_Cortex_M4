#include <stdint.h>
#include <stdio.h>
int add(int a,int b);
int mul(int a,int b);
int add(int a,int b)
{
	int sum;
	sum=a+b;
	return sum;
}
int mul(int a,int b)
{
	int prod;
	prod=a*b;
	return prod;

}

int main(void)
{
while(1)
{
	int a=10,b=20,sum,prod;

    printf("Add two numbers \n");
    sum=add(a,b);
    printf("Sum of two numbers %d \n",sum);
    printf("Multiply two numbers \n");
    prod=mul(a,b);
    printf("Prod of two numbers %d \n",prod);

    fflush(stdout);
}
	return 0;
}
